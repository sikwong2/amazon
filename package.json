{
  "name": "ucsc-amazon",
  "version": "0.1.0",
  "description": "ucsc-amazon",
  "author": "CSE187 Group 2",
  "license": "UNLICENSED",
  "repository": "none",
  "scripts": {
    "docker": "concurrently \"npm run docker-accounts\" \"npm run docker-orders\" \"npm run docker-products\"",
    "docker-accounts": "cd AccountService && docker-compose up -d",
    "docker-orders": "cd OrderService && docker-compose up -d",
    "docker-products": "cd ProductService && docker-compose up -d",
    "docker-down-accounts": "cd AccountService && docker-compose down",
    "docker-down-orders": "cd OrderService && docker-compose down",
    "docker-down-products": "cd ProductService && docker-compose down",
    "docker-down": "concurrently \"npm run docker-down-accounts\" \"npm run docker-down-orders\" \"npm run docker-down-products\"",
    "vendor": "concurrently --kill-others \"npm run accounts\" \"npm run vendor-app\"",
    "admin": "concurrently --kill-others \"npm run accounts\" \"npm run admin-app\"",
    "shopper": "concurrently --kill-others \"npm run accounts\" \"npm run shopper-app\"",
    "accounts": "cd AccountService && npm run dev",
    "orders": "cd OrderService && npm run dev",
    "products": "cd ProductService && npm run dev",
    "admin-app": "cd admin-app && npm run dev",
    "vendor-app": "cd vendor-app && npm run dev",
    "shopper-app": "cd shopper-app && npm run dev"
  },
  "devDependencies": {
    "concurrently": "*"
  }
}