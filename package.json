{
  "name": "ucsc-amazon",
  "version": "0.1.0",
  "description": "ucsc-amazon",
  "author": "CSE187 Group 2",
  "license": "UNLICENSED",
  "repository": "none",
  "scripts": {
    "docker-up": "docker-compose up -d postgres",
    "docker-down": "docker-compose down",
    "docker-with-logs": "docker-compose up postgres",
    "dev": "concurrently --kill-others \"npm run accounts\" \"npm run orders\" \"npm run products\" \"npm run admin-app\" \"npm run vendor-app\" \"npm run shopper-app\"  \"npm run vendor-api\"",
    "vendor": "concurrently --kill-others \"npm run accounts\" \"npm run vendor-app\"",
    "admin": "concurrently --kill-others \"npm run accounts\" \"npm run admin-app\"",
    "shopper": "concurrently --kill-others \"npm run accounts\" \"npm run shopper-app\"",
    "accounts": "cd AccountService && npm run dev",
    "orders": "cd OrderService && npm run dev",
    "products": "cd ProductService && npm run dev",
    "admin-app": "cd admin-app && npm run dev",
    "vendor-app": "cd vendor-app && npm run dev",
    "shopper-app": "cd shopper-app && npm run dev",
    "vendor-api": "cd vendor-api && npm run dev",
    "cis": "npm ci && npm run ci-vendor && npm run ci-admin && npm run ci-shopper && npm run ci-accounts && npm run ci-orders && npm run ci-products && npm run ci-vendor-api",
    "ci-vendor": "cd vendor-app && npm ci",
    "ci-admin": "cd admin-app && npm ci",
    "ci-shopper": "cd shopper-app && npm ci",
    "ci-accounts": "cd AccountService && npm ci",
    "ci-orders": "cd OrderService && npm ci",
    "ci-products": "cd ProductService && npm ci",
    "ci-vendor-api": "cd vendor-api && npm ci",
    "install": "npm install concurrently && npm run install-vendor && npm run install-admin && npm run install-shopper && npm run install-accounts && npm run install-orders && npm run install-products && npm run install-vendor-api && npm run install-e2e",
    "install-vendor": "cd vendor-app && npm install",
    "install-admin": "cd admin-app && npm install",
    "install-shopper": "cd shopper-app && npm install",
    "install-accounts": "cd AccountService && npm install",
    "install-orders": "cd OrderService && npm install",
    "install-products": "cd ProductService && npm install",
    "install-vendor-api": "cd vendor-api && npm install",
    "install-e2e": "cd e2e && npm install",
    "build": "npm run build-vendor && npm run build-admin && npm run build-shopper && npm run build-accounts && npm run build-orders && npm run build-products && npm run build-vendor-api",
    "build-vendor": "cd vendor-app && npm run build",
    "build-admin": "cd admin-app && npm run build",
    "build-shopper": "cd shopper-app && npm run build",
    "build-accounts": "cd AccountService && npm run build",
    "build-orders": "cd OrderService && npm run build",
    "build-products": "cd ProductService && npm run build",
    "build-vendor-api": "cd vendor-api && npm run build",
    "start": "concurrently --kill-others \"npm run start-vendor\" \"npm run start-vendor-api\" \"npm run start-admin\" \"npm run start-shopper\" \"npm run start-accounts\" \"npm run start-orders\" \"npm run start-products\"",
    "start-vendor": "cd vendor-app && npm start",
    "start-admin": "cd admin-app && npm start",
    "start-shopper": "cd shopper-app && npm start",
    "start-accounts": "cd AccountService && npm start",
    "start-orders": "cd OrderService && npm start",
    "start-products": "cd ProductService && npm start",
    "start-vendor-api": "cd vendor-api && npm start",
    "test-silent": "npm run test-silent-accounts && npm run test-silent-products && npm run test-silent-orders && npm run test-silent-shopper && npm run test-silent-vendor-api",
    "test-silent-accounts": "cd AccountService && npm run test-silent",
    "test-silent-orders": "cd OrderService && npm run test-silent",
    "test-silent-products": "cd ProductService && npm run test-silent",
    "test-silent-vendor": "cd vendor-app && npm run test-silent",
    "test-silent-admin": "cd admin-app && npm run test-silent",
    "test-silent-shopper": "cd shopper-app && npm run test-silent",
    "test-silent-vendor-api": "cd vendor-api && npm run test-silent",
    "test": "npm run test-accounts && npm run test-products && npm run test-orders && npm run test-shopper && npm run test-vendor-api",
    "test-accounts": "cd AccountService && npm test",
    "test-orders": "cd OrderService && npm test",
    "test-products": "cd ProductService && npm test",
    "test-vendor": "cd vendor-app && npm test",
    "test-admin": "cd admin-app && npm test",
    "test-shopper": "cd shopper-app && npm test",
    "test-vendor-api": "cd vendor-api && npm test",
    "package": "docker build . -t cbe-linux-amd64 --platform linux/amd64 && docker save -o cbe-linux-amd64.tar cbe-linux-amd64",
    "containerised": "npm run build && docker-compose up --build -d",
    "e2e": "cd e2e && npm run test",
    "zip": "zip -r submission.zip . -x \\*node_modules\\* \\*.next\\* \\*.swc\\* \\*.DS_Store\\* \\*venv\\* \\*app.tar\\* \\*.git\\*"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
