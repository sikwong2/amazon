{
  "name": "cse187-microservice-product",
  "version": "1.0.0",
  "description": "CSE187 Product Micro Service",
  "author": "CSE187 Group2",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "@types/bcrypt": "*",
    "@types/express": "*",
    "@types/jsonwebtoken": "*",
    "@types/node": "*",
    "@types/pg": "*",
    "@types/jest": "*",
    "@types/swagger-ui-express": "*",
    "concurrently": "*",
    "eslint": "*",
    "eslint-config-typescript": "^3.0.0",
    "jest": "*",
    "nodemon": "*",
    "supertest": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "ts-postgres": "*",
    "typescript": "*",
    "@jest/globals": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "@types/glob": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "dotenv": "*",
    "jest-environment-jsdom": "*",
    "msw": "*",
    "next-router-mock": "*",
    "@types/cors": "*",
    "@types/supertest": "*",
    "bestzip": "*",
    "joi": "*"
  },
  "dependencies": {
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "pg": "*",
    "swagger-ui-express": "*",
    "tsoa": "*"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node build/src/server.js",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "predev": "npm run swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "swagger": "tsoa spec-and-routes",
    "pretest": "npm run swagger",
    "test": "jest --runInBand --coverage --verbose --no-cache --forceExit",
    "lint": "eslint ./src/**/*.[jt]s --fix"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 500,
    "collectCoverageFrom": [
      "src/**/*.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "src/server.[jt]s"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "build"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 14
    },
    "rules": {
      "indent": [
        "warn",
        2
      ]
    }
  }
}
